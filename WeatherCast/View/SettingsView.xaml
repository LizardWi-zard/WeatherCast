<UserControl x:Class="WeatherCast.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherCast.View" 
             xmlns:viewmodel="clr-namespace:WeatherCast.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:SettingsViewModel}"
             mc:Ignorable="d" 
             d:DesignWidth="800" 
             Height="600">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0" MaxWidth="210" Width="*"/>
            <ColumnDefinition MinWidth="400" MaxWidth="1450" Width="100*"/>
            <ColumnDefinition MinWidth="0" MaxWidth="210" Width="*"/>
        </Grid.ColumnDefinitions>

        <Canvas Grid.ColumnSpan="3"
            Grid.Row="0"
            Background="#C7CBD3">

            <TextBlock 
               Text="Настройки"
               FontSize="20"
               FontWeight="Bold"
              
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="20 10 0 0" />

        </Canvas>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Grid.Column="1"
                      Margin="0 5 0 5">

            <Grid Grid.Column="1"
                  Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <Grid Grid.Row="0">

                    <TextBlock Text="При запуске показывать"
                               FontSize="26"
                               FontWeight="Normal"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Margin="20 10 0 0" />

                    <TextBox Height="36"
                             Width="340"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Bottom"
                             FontSize="18"
                             TextAlignment="Left"
                             Margin="20 0 20 20"
                             Text="{Binding InputText}"/>

                    <Button Content="Применить"
                            Height="36"
                            Width="80"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            Margin="370 0 20 20"
                            Command="{Binding SendTextCommand}" />

                </Grid>
                
