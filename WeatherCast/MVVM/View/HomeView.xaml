<UserControl x:Class="WeatherCast.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:WeatherCast.MVVM.View" 
             xmlns:viewmodel="clr-namespace:WeatherCast.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel>
        
        <TextBlock Text="Добрый день" 
                   Margin="10 0 0 20"
                   FontSize="24"/>

        <StackPanel Orientation="Horizontal"
                    Background="Transparent">

            <Border Height="150"
                    Width="300"
                    Background="AliceBlue"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0 0 0 0"
                    CornerRadius="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Температура на данный момент:"
                               Foreground="Black"
                               FontSize="18"
                               FontWeight="Bold"/>

                    <TextBlock Text="{Binding Response.Main.Temp}"
                                Foreground="Black"
                                FontSize="16"
                                FontWeight="Medium"
                                Grid.Row="1"/>
                </Grid>
                
                

            </Border>

            <Border Height="150"
                    Width="150"
                    Background="AliceBlue"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20 0 0 0"
                    CornerRadius="20"/>
            
        </StackPanel>

        <TextBlock Text="Погода в других городах" 
                   Margin="10 20 0 20"
                   FontSize="24"/>

        <StackPanel Background="Transparent"
                    Orientation="Horizontal">

            <Border Height="150"
                    Width="150"
                    Background="AliceBlue"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="0 0 0 0"
                    CornerRadius="20"/>

            <Border Height="150"
                    Width="150"
                    Background="AliceBlue"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20 0 0 0"
                    CornerRadius="20"/>

            <Border Height="150"
                    Width="150"
                    Background="AliceBlue"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20 0 0 0"
                    CornerRadius="20"/>

            <Border Height="150"
                    Width="150"
                    Background="AliceBlue"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20 0 0 0"
                    CornerRadius="20"/>

        </StackPanel>
    </StackPanel>
</UserControl>
