<Window x:Class="WeatherCast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:WeatherCast.MVVM.ViewModel"
        xmlns:local="clr-namespace:WeatherCast"
        mc:Ignorable="d"
        Title="WeatherCast" 
        Height="600" Width="920"
        MinHeight="600" MinWidth="670">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>


   

    <Grid Background="#E4E7E4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="48"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="Cast"
                   Foreground="#080C2E"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" 
                   FontSize="23" 
                   FontWeight="DemiBold"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="48"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <RadioButton Style="{StaticResource MenuButtonTheme}"
                        Height="48"
                        Command="{Binding HomeViewCommand}"
                        Grid.Row="0"
                        Content="C:\Users\ArEf\source\repos\WeatherCast\WeatherCast\Images\Icons\home.png" 
                        IsChecked="True" />

                <RadioButton Content="Поиск"
                             Height="48"
                             FontSize="15"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding SearchViewCommand}"
                             Grid.Row="1"/>

            </Grid>
        </Grid>
        <!--
        <TextBlock Text="Добавленные города"
                           Foreground="#080C2E"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" 
                           FontSize="17"
                           FontWeight="Bold"
                           Margin="30 0 0 0"
                           Grid.Row="2"/>
        -->
        

        <Grid Grid.Row="1"
              Grid.Column="1">

            <ContentControl HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Content="{Binding CurrentView}"/>

        </Grid>

    </Grid>
</Window>

