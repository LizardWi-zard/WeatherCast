<Window x:Class="WeatherCast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:WeatherCast.MVVM.ViewModel"
        xmlns:local="clr-namespace:WeatherCast"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="920"
        MinHeight="400" MinWidth="600">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>


    <Window.Resources>
        <ControlTemplate 
            x:Key="ButtonTemplate" 
            TargetType="Button">

            <Grid 
                x:Name="BackgroundButton"
                Background="#F5F6F6">

                <TextBlock 
                    Text="{TemplateBinding Property=Content}"
                    Grid.Column="2"
                    FontSize="18"
                    FontWeight="DemiBold"
                    TextAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="30 0 0 0"/>

                <ContentPresenter 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Grid>

            <ControlTemplate.Triggers>
                <Trigger 
                    Property="IsMouseOver" 
                    Value="true">

                    <Setter
                        Property="Background"
                        TargetName="BackgroundButton"
                        Value="#E2E2E2"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid Background="#E4E7E4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="WeatherCast"
                   Foreground="#080C2E"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" 
                   FontSize="23" 
                   FontWeight="DemiBold"
                   Margin="30 0 0 0"/>

        <StackPanel Grid.Row="1">
            <Button Content="Добавить город"
                    Height="35"
                    FontSize="15"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding HomeViewCommand}"/>

            <Button Content="Найти город"
                    Height="35"
                    FontSize="15"
                    Style="{StaticResource MenuButtonTheme}"
                    Command="{Binding SearchViewCommand}"/>

        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="700"
                                  MinWidth="250"/>
                <ColumnDefinition/>
                
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                 Height="36"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 Margin="5 0 5 0"
                 Style="{StaticResource TextBoxTheme}"/>
        </Grid>

        <ContentControl Grid.Row="1" 
                        Grid.Column="1" 
                        Margin="5"
                        Content="{Binding CurrentView}"/>

    </Grid>
</Window> 